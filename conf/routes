# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /jpregel/start              controllers.Application.startJpregel()
POST    /jpregel/stop               controllers.Application.stopJpregel()
GET     /room                       controllers.Application.chatRoom(username: String ?= null)
GET     /room/chat                  controllers.Application.chat(username)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
